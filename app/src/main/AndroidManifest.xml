<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.comsci.michelaustin.comscisummative">

    <application
        android:allowBackup="true"
        android:icon="@drawable/lgbuoy"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/splashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".firstopening"
            android:screenOrientation="portrait" />
        <activity android:name=".info" />
        <activity android:name=".menuopening" />
        <activity android:name=".QuizCompletionActivity" />
        <activity android:name=".QuizMenuActivity" />
        <activity android:name=".mainMenu" />
        <activity android:name=".settingsPage"></activity>
    </application>
    <uses-permission android:name="android.permission.GET_TASKS"/>

</manifest>